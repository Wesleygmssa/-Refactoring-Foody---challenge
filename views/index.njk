{% extends 'layout.njk' %}

{%block css%}
    <link rel="stylesheet" href="/css/style.css">
{%endblock%}

{% block title%}
    <title>Foodfy</title>
{%endblock%}

  {% block content%} 
    <section class="banner ">
        <div class="banner-info">
            <h1>As melhores receitas</h1>
            <p>Aprenda a construir os melhores pratos
            com receitas criadas por profissionais
            do mundo inteiro.</p>
        </div>
        <div class="banner-img">
            <img src="img/chef.png" alt="">
        </div>
    </section><!-- banner -->

    <section class="most-accessed ">
        <h2>Mais acessadas</h2>
        <div class="cards">
        {%for receita in receitas%}
            <div class="card" id="{{loop.index0}}">
                <div class="card-img">
                    <img src="{{receita.image}}" alt="">
                </div>
                <div class="card-content">
                    <h3>{{receita.title}}</h3>
                    <p>{{receita.author}}</p>
                </div>
            </div>
        {%endfor%}
        </div> <!-- cards -->
    </section> <!--most-accessed   -->
{%endblock%}